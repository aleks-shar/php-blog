{% extends 'base.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mb-3 mt-3">Latest Post</h1>
        <div class="row">
            <div class="col-md-9">
                {% for post in posts %}
                    <div class="row mb-2 bg-light" style="border: 1px solid #ddd;">
                        <div class="p-3">
                            {% if post.image_path is not null %}
                                <img src="/{{ post.image_path }}" class="img-fluid" alt="{{ post.title|escape }}">
                            {% else %}
                                <img src="https://dummyimage.com/300x200/5b76ba/ffffff" class="card-img-top" alt="...">
                            {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title">{{ post.title|escape }}</h5>
                                    <span class="text-muted">Aleks Shar | {{ post.published_date|date("F d, Y") }}</span>
                                    <p class="card-text">{{ post.description|escape }}</p>
                                    <a href="/{{ post.url_key }}" class="btn btn-primary">Read more</a>
                                </div>
                        </div>
                    </div>
                {% endfor %}
                <div class="row">
                    <a href="/blog">View all</a>
                </div>
            </div>
            <div class="col-md-3">
                <div class="container">
                    <h3>About</h3>
                    <p>Hello. I Am Programmer</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}