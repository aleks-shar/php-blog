{% extends 'base.twig' %}

{% block body %}

    <div class="container mt-5">
        {% if post.image_path is not null %}
            <img src="/{{ post.image_path }}" class="img-fluid" alt="{{ post.title|escape }}">
        {% else %}
        <img src="https://dummyimage.com/1200x400/5b76ba/ffffff" class="img-fluid" alt="{{ post.title|escape }}">
        {% endif %}
        <h1 class="mt-3 mb-3">{{ post.title|escape }}</h1>

        <div class="container mb-3">
            <span class="text-muted">Aleks Shar | {{ post.published_date|date("F d, Y") }}</span>
        </div>

        <div>
            {{ post.content|raw }}
        </div>

    </div>

{% endblock %}